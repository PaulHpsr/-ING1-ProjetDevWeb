{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
    <div class="container">
        <h1>Tableau de Bord</h1>

        <div class="statistics-section">
            <h2>Consommation Énergétique</h2>
            
            <!-- Graphique pour la consommation énergétique quotidienne -->
            <canvas id="dailyConsumptionChart" width="400" height="200"></canvas>

            <!-- Graphique pour la consommation énergétique hebdomadaire -->
            <canvas id="weeklyConsumptionChart" width="400" height="200"></canvas>
        </div>

        <!-- Inclure Chart.js -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        
        <script>
            // Graphique de la consommation quotidienne
            const dailyConsumptionCtx = document.getElementById('dailyConsumptionChart').getContext('2d');
            const dailyConsumptionChart = new Chart(dailyConsumptionCtx, {
                type: 'bar',
                data: {
                    labels: ['Aujourd\'hui'],
                    datasets: [{
                        label: 'Consommation énergétique (kWh)',
                        data: [{{ dailyConsumption }}], // Données de consommation quotidienne
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Graphique de la consommation hebdomadaire
            const weeklyConsumptionCtx = document.getElementById('weeklyConsumptionChart').getContext('2d');
            const weeklyConsumptionChart = new Chart(weeklyConsumptionCtx, {
                type: 'line',
                data: {
                    labels: ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi', 'Dimanche'], // Exemple de jours de la semaine
                    datasets: [{
                        label: 'Consommation énergétique (kWh)',
                        data: [{{ weeklyConsumption }}], // Données de consommation hebdomadaire
                        fill: false,
                        borderColor: 'rgba(54, 162, 235, 1)',
                        tension: 0.1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        </script>

    </div>
{% endblock %}
