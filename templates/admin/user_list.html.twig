{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    {% include 'recherche.html.twig' %}
    {% include 'template.html.twig' %}
<body class="user-list-page">
        <h1 class="text-center">Liste des utilisateurs</h1>

        <!-- Table des utilisateurs -->
        <div class="user-table-container">
            <table class="user-table">
                <thead>
                    <tr>
                        <th>Pseudo</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.firstName }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.status }}</td>
                            <td>
                                <form action="{{ path('admin_ban_user', {'id': user.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir bannir cet utilisateur ?');">
  <button type="submit" class="btn btn-danger">Bannir</button>
</form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="no-user">Aucun utilisateur trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
</body>
{% endblock %}
