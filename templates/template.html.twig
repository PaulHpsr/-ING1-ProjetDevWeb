{% extends 'base.html.twig' %}

{% block title %}Page d'accueil | Dater{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">

    <div class="sommaire">
        <div class="logo">
            <img id="logo-icon" src="{{ asset(app.user.color == 0 ? 'icones/white/cacaboudin.png' : 'icones/black/cacaboudin.png') }}" alt="Icône" class="image">
            Dater
        </div>

        <div class="boutons">
            <a href="{{ path('app_home') }}" class="bouton">
                <img id="icon-home" src="{{ asset(app.user.color == 0 ? 'icones/white/home.png' : 'icones/black/home.png') }}" alt="Icône" class="image">
                Accueil
            </a>
            <a href="{{ path('app_recherche') }}" class="bouton">
                <img id="icon-recherche" src="{{ asset(app.user.color == 0 ? 'icones/white/026-search.png' : 'icones/black/026-search.png') }}" alt="Icône" class="image">
                Explorer
            </a>
            <a href="{{ path('objets_connectes') }}" class="bouton">
                <img id="icon-objets" src="{{ asset(app.user.color == 0 ? 'icones/white/026-search.png' : 'icones/black/026-search.png') }}" alt="Icône" class="image">
                Objets connectés
            </a>
            <a href="{{ path('app_profile') }}" class="bouton">
                <img id="icon-profil" src="{{ asset(app.user.color == 0 ? 'icones/white/profil.png' : 'icones/black/profil.png') }}" alt="Icône" class="image">
                Profil
            </a>
            <a href="{{ path('app_logout') }}" class="bouton" id="disconnect">
                <img id="icon-exit" src="{{ asset(app.user.color == 0 ? 'icones/white/exit.png' : 'icones/black/exit.png') }}" alt="Icône" class="image">
                Déconnexion
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin_users') }}" class="bouton">
                    <img id="icon-admin-users" src="{{ asset(app.user.color == 0 ? 'icones/white/008-message.png' : 'icones/black/008-message.png') }}" alt="Icône" class="image">
                    Gérer les utilisateurs
                </a>
                <a href="{{ path('admin_signalements') }}" class="bouton">
                    <img id="icon-admin-signalements" src="{{ asset(app.user.color == 0 ? 'icones/white/043-warning.png' : 'icones/black/043-warning.png') }}" alt="Icône" class="image">
                    Notifications
                </a>
                <li>
                    <a href="{{ path('admin_verification') }}">Valider les inscriptions</a>
                </li>
                <a href="{{ path('app_infos_new') }}" class="bouton">
                    <img id="icon-admin-profil" src="{{ asset(app.user.color == 0 ? 'icones/white/profil.png' : 'icones/black/profil.png') }}" alt="Icône" class="image">
                    Ajouter Infos
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
