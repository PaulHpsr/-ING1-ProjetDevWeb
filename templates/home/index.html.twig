{% extends 'base.html.twig' %}

{% block title %}CY Entreprise | Gestionnaire de Bâtiment{% endblock %}

{% block body %}
<style>
    @font-face {
        font-family: 'against.projet';
        src: url('{{ asset('fonts/against_regular.otf') }}') format('opentype'); 
    }

    @font-face {
        font-family: 'quicksand';
        src: url('{{ asset('fonts/Quicksand_Light.otf') }}') format('opentype');
    }

    /* Body and Background */
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        width: 100vw;
        background-size: cover;
        background-position: center;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Overlay for dark background */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1;
    }

    /* Logo Section */
    .logo {
        position: absolute;
        top: 3rem;
        left: 3rem;
        font-family: 'against.projet';
        color: white;
        font-size: 3rem;
        text-decoration: none;
        text-align: left;
        display: flex;
        align-items: center;
    }

    .image {
        width: 4rem;
        height: 4rem;
        margin-right: 1rem;
    }

    /* Main Heading Section */
    .main {
        position: absolute;
        top: 30%;
        left: 10%;
        font-family: 'quicksand';
        color: white;
        font-weight: bold;
        font-size: 3rem;
        text-align: center;
        z-index: 2;
    }

    /* Buttons Styling */
    .bouton {
        padding: 1rem 2rem;
        background-color: rgba(119, 249, 119, 0.7);
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        border-radius: 2rem;
        text-decoration: none;
        margin: 0 1rem;
        box-shadow: 0 0.5vw 1vw rgba(0, 0, 0, 0.3);
        transition: background-color 0.3s ease;
    }

    .bouton:hover {
        background-color: #77F977;
    }

    /* Container for the buttons */
    .buttons-container {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Footer section */
    .footer {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        font-family: 'quicksand';
        font-size: 1rem;
        text-align: center;
    }

</style>

<div class="overlay">
    <!-- Logo and Title -->
    <div>
        <a href="{{ path('app_home') }}" class="logo">
            <img src="{{ asset('icones/cacaboudin.jpg') }}" alt="Icône" class="image">CY Entreprise
        </a>
    </div>

    <!-- Buttons for Login and Register -->
    <div class="buttons-container">
        <a href="{{ path('app_login') }}" class="bouton">Se connecter</a>
        <a href="{{ path('app_register') }}" class="bouton">Créer un compte</a>
    </div>
</div>

<!-- Footer Section -->
<div class="footer">
    <p><strong>© Site entièrement codé par : Paul Hopsore, Flavie CISSE, Pierre-Emmanuel TISSOT, CIRCE.</strong></p>
</div>

{% endblock %}
