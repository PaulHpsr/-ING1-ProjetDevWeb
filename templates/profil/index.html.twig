{# templates/profile/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<style>
    .profile-picture {
        width: 100px; /* largeur réduite */
        height: 100px; /* hauteur réduite */
        object-fit: cover; /* pour garder les proportions */
        border-radius: 50%; /* pour rendre l'image circulaire */
        margin-bottom: 10px;
    }

    .profile-container {
        text-align: center;
        margin-top: 20px;
    }

    .profile-details {
        margin-top: 20px;
        text-align: left;
    }

    .btn-edit {
        margin-top: 20px;
        display: inline-block;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

    .btn-edit:hover {
        background-color: #0056b3;
    }
</style>

<div class="profile-container">
    <h1>Mon Profil</h1>

    {% if user.profilePicture %}
        <img src="{{ asset('uploads/profiles/' ~ user.profilePicture) }}" alt="Photo de profil" class="profile-picture">
    {% else %}
        <img src="{{ asset('images/default-profile.png') }}" alt="Photo de profil par défaut" class="profile-picture">
    {% endif %}

    <div class="profile-details">
        <p><strong>Nom :</strong> {{ user.firstName }} {{ user.lastName }}</p>
        <p><strong>Email :</strong> {{ user.email }}</p>
        <p><strong>Date de naissance :</strong> {{ user.birthdate|date('d/m/Y') }}</p>
        <p><strong>Niveau d'expérience :</strong> {{ user.experienceLevel }}</p>
        <p><strong>Points :</strong> {{ user.points }}</p>
    </div>

    <a href="{{ path('app_profile_edit') }}" class="btn-edit">Modifier mon profil</a>
</div>
{% endblock %}
