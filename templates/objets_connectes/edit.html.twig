{% extends 'base.html.twig' %}

{% block title %}Modifier l'Objet Connecté{% endblock %}

{% block body %}
    {% include 'recherche.html.twig' %}
    {% include 'template.html.twig' %}
<body class="modify-object-page">

        <h1 class="text-center mb-4">Modifier l'Objet Connecté</h1>


            {{ form_start(form) }}
                <div class="form-group mb-3">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.type) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.consommationEnergetique, 'Consommation Énergétique (kWh)', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.consommationEnergetique, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.consommationEnergetique) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Modifier</button>
                    <a href="{{ path('objets_connectes') }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}


</body>
{% endblock %}

{% block stylesheets %}
<style>
    /* ---------------------- */
    /* Modifier l'Objet Connecté - Page Styles */
    /* ---------------------- */
    
    body.modify-object-page {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        font-family: 'Roboto', sans-serif;
        transition: background-color 0.5s ease, color 0.5s ease;
    }
    
    body.modify-object-page.theme-light {
        background-color: #FAF9F6; /* Fond clair : blanc cassé */
        color: #333;
    }
    
    body.modify-object-page.theme-dark {
        background-color: #1F1F1F; /* Fond sombre : gris anthracite */
        color: #F5F5F5;
    }
    
    .container {
        margin: 2rem auto;
        max-width: 600px;
        padding: 2rem;
        background-color: #FFFFFF;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }
    
    body.modify-object-page.theme-dark .container {
        background-color: #2A2A2A;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }
    
    h1.text-center {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 2rem;
        transition: color 0.3s ease;
    }
    
    body.modify-object-page.theme-light h1.text-center {
        color: #333;
    }
    
    body.modify-object-page.theme-dark h1.text-center {
        color: #F5F5F5;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        font-weight: 500;
    }
    
    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 1rem;
        transition: border-color 0.3s ease, background-color 0.3s ease;
    }
    
    body.modify-object-page.theme-dark .form-control {
        background-color: #333;
        border-color: #444;
        color: #fff;
    }
    
    .btn {
        margin: 0.5rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }
    
    .btn-primary {
        background-color: #007BFF;
        color: #fff;
        border: none;
        border-radius: 6px;
    }
    
    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }
    
    .btn-secondary {
        background-color: #6C757D;
        color: #fff;
        border: none;
        border-radius: 6px;
    }
    
    .btn-secondary:hover {
        background-color: #565D64;
    }
</style>
{% endblock %}
