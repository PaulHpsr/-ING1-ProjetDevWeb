{% extends 'base.html.twig' %}

{% block title %}Modifier l'Objet Connecté{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Modifier l'Objet Connecté</h1>

    <div class="card shadow-sm p-4">
        {{ form_start(form) }}
            <div class="form-group mb-3">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.type) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.consommationEnergetique, 'Consommation Énergétique (kWh)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.consommationEnergetique, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.consommationEnergetique) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Modifier</button>
                <a href="{{ path('objets_connectes') }}" class="btn btn-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn {
        margin: 0.5rem;
    }
</style>
{% endblock %}
